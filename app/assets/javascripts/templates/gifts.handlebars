<div class='row'>
  <div class='col-md-8'>
    <h2>My List</h2>
    {{#if displayRecordNotFound}}
        <div class="alert alert-danger fade in">
          The gift could not be found.
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
        </div>
    {{/if}}
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
        </tr>
      </thead>

      {{#each}}
      <tr>
        <td data-role='name'>{{#link-to 'gift' this}}{{name}}{{/link-to}} </td>
        <td data-role='price'>{{price}}</td>
      </tr>
      {{/each}}
    </table>
    {{#link-to 'gifts.new'}}+{{/link-to}}
  </div>

  {{outlet}}
</div>
{{outlet newGift}}
