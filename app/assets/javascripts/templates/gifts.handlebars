<div class='row'>
  <div class='col-md-8'>
    <h2>My List</h2>
    {{#if displayRecordNotFound}}
        <div class="alert alert-danger fade in">
          The gift could not be found.
          <button type="button" class="close" data-dismiss="alert">Ã—</button>
        </div>
    {{/if}}
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
        </tr>
      </thead>

      {{#each}}
        {{#link-to 'gift' this tagName=tr}}
          <td data-role='name'>{{name}}</td>
          <td data-role='price'>{{price}}</td>
        {{/link-to}}
      {{/each}}
    </table>
    {{#if displayNewGiftButton}}
      {{#link-to 'gifts.new'}}+{{/link-to}}
    {{/if}}
  </div>

  {{outlet}}
</div>
