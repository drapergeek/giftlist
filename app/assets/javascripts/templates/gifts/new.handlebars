<div class='row'>
  <div class='col-md-8'>
    <h2>Add a new gift</h2>
    <form class='form-inline' role='form'>
      <div class='form-group'>
        {{input value=name id='giftName' placeholder='Name' class='form-control'}}
      </div>
      <div class='form-group'>
        {{input value=price id='giftPrice' placeholder='Price' class='form-control'}}
      </div>
      <input type="submit" value="Add" class='btn btn-submit' {{action createGift}}>
      {{#link-to 'gifts' class='btn'}}Cancel{{/link-to}}
    </form>
  </div>
</div>
